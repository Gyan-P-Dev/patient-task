<div class="bg-white shadow-2xl rounded-lg mx-auto mt-6 p-8 w-full max-w-5xl border border-gray-300">
  <div class="header bg-white-600 text-white p-4 flex justify-between items-center">
    <%= render 'patients/user_info' %>
  </div>

  <div class="details-container mt-6">
    <h1 class="text-2xl font-semibold text-gray-700 mb-4">Patient Details</h1>

    <table class="w-full border-collapse">
      <tr>
        <td class="px-4 py-2 font-medium text-gray-700">First Name:</td>
        <td class="px-4 py-2"><%= @patient.first_name %></td>
      </tr>
      <tr>
        <td class="px-4 py-2 font-medium text-gray-700">Last Name:</td>
        <td class="px-4 py-2"><%= @patient.last_name %></td>
      </tr>
      <tr>
        <td class="px-4 py-2 font-medium text-gray-700">Email:</td>
        <td class="px-4 py-2"><%= @patient.email %></td>
      </tr>
      <tr>
        <td class="px-4 py-2 font-medium text-gray-700">Next Appointment:</td>
        <td class="px-4 py-2"><%= @patient.next_appointment_date&.strftime('%Y-%m-%d %H:%M') || 'N/A' %></td>
      </tr>
    </table>

    <div class="actions mt-4 flex justify-center">
      <%= link_to "Edit Patient", edit_patient_path(@patient), class: "button edit-button bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded mr-2" %>
      <%= link_to "Back to Patients", patients_path, class: "button back-button bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded" %>
    </div>
  </div>
</div>